<?xml version="1.0"?>
<odoo>
    <!--	Form View-->
    <record id="product_template_form_insurance" model="ir.ui.view">
        <field name="name">product.template.form.insurance</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="is_insurance_covered"/>
                    <label for="is_insurance_covered"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>